# Threads自動投稿システム 環境変数設定ファイル

  # アプリケーション設定
  NODE_ENV=development
  VITE_API_URL=http://localhost:5000

  # セキュリティ設定（変更推奨）
  SECRET_KEY=threads-auto-post-secret-key-2025
  JWT_SECRET=threads-jwt-secret-key-2025

  # Claude API設定（APIキーを設定してください）
  CLAUDE_API_KEY=your-anthropic-api-key-here
  CLAUDE_MODEL=claude-sonnet-4-20250514

  # Buffer API設定（スキップ可能）
  BUFFER_ACCESS_TOKEN=not-configured
  BUFFER_PROFILE_ID=not-configured

  # Easy Scraper設定（スキップ可能）
  EASY_SCRAPER_SHEET_ID=not-configured
  EASY_SCRAPER_TRIGGER_URL=not-configured

  # 以下はデフォルト値のままでOK
  DATABASE_PATH=./threads_auto_post.db
  DATABASE_BACKUP_PATH=./backups
  UPLOAD_FOLDER=./uploads
  MAX_UPLOAD_SIZE=5242880
  ALLOWED_EXTENSIONS=png,jpg,jpeg,gif
  CSV_WATCH_PATH=./csv_input
  CSV_PROCESSED_PATH=./csv_processed
  DEFAULT_POST_INTERVAL=60
  DEFAULT_SCRAPING_INTERVAL=8
  DEFAULT_DAILY_POST_LIMIT=10
  DEFAULT_POST_START_TIME=09:00
  DEFAULT_POST_END_TIME=21:00
  LOG_LEVEL=INFO
  LOG_FILE=./logs/threads_auto_post.log
  LOG_MAX_SIZE=10485760
  LOG_BACKUP_COUNT=5
  CORS_ORIGINS=http://localhost:5173,http://localhost:3000
  RATE_LIMIT_PER_MINUTE=60
  RATE_LIMIT_PER_HOUR=1000
  SESSION_LIFETIME=86400
  SESSION_COOKIE_SECURE=false
  SESSION_COOKIE_HTTPONLY=true
  CACHE_TYPE=simple
  CACHE_DEFAULT_TIMEOUT=300
  MONITORING_ENABLED=false
  ALERT_EMAIL=admin@example.com
  ALERT_WEBHOOK_URL=
  BACKUP_ENABLED=true
  BACKUP_INTERVAL_HOURS=24
  BACKUP_RETENTION_DAYS=7
  DEBUG=true
  MOCK_API=false
  HOT_RELOAD=true